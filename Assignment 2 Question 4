#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* concatenateStrings(char* str1, char* str2) {
    int len1 = strlen(str1);
    int len2 = strlen(str2);
    char* result = malloc(len1 + len2 + 1);
    strcpy(result, str1);
    strcat(result, str2);
    return result;
}

void reverseString(char str[]) {
    int len = strlen(str);
    for (int i = 0; i < len / 2; i++) {
        char temp = str[i];
        str[i] = str[len - 1 - i];
        str[len - 1 - i] = temp;
    }
}

void deleteVowels(char str[]) {
    int i = 0, j = 0;
    while (str[i]) {
        if (str[i] != 'a' && str[i] != 'e' && str[i] != 'i' && 
            str[i] != 'o' && str[i] != 'u' && str[i] != 'A' && 
            str[i] != 'E' && str[i] != 'I' && str[i] != 'O' && str[i] != 'U') {
            str[j++] = str[i];
        }
        i++;
    }
    str[j] = '\0';
}

void sortStrings(char arr[][100], int n) {
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (strcmp(arr[i], arr[j]) > 0) {
                char temp[100];
                strcpy(temp, arr[i]);
                strcpy(arr[i], arr[j]);
                strcpy(arr[j], temp);
            }
        }
    }
}

void uppercaseToLowercase(char str[]) {
    for (int i = 0; str[i]; i++) {
        if (str[i] >= 'A' && str[i] <= 'Z') {
            str[i] = str[i] + 32;
        }
    }
}

int main() {
    char str1[] = "Hello ";
    char str2[] = "World";
    char* concatenated = concatenateStrings(str1, str2);
    printf("Concatenated string: %s\n", concatenated);
    
    char reverseStr[] = "Hello World";
    printf("Original string: %s\n", reverseStr);
    reverseString(reverseStr);
    printf("Reversed string: %s\n", reverseStr);
    
    char vowelStr[] = "Hello World";
    printf("Original string: %s\n", "Hello World");
    deleteVowels(vowelStr);
    printf("After removing vowels: %s\n", vowelStr);
    
    char strings[5][100] = {"zebra", "apple", "banana", "orange", "grape"};
    int n = 5;
    printf("Original strings: ");
    for (int i = 0; i < n; i++) {
        printf("%s ", strings[i]);
    }
    printf("\n");
    sortStrings(strings, n);
    printf("Sorted strings: ");
    for (int i = 0; i < n; i++) {
        printf("%s ", strings[i]);
    }
    printf("\n");
    
    char upperStr[] = "HELLO WORLD";
    printf("Original string: %s\n", upperStr);
    uppercaseToLowercase(upperStr);
    printf("Lowercase string: %s\n", upperStr);
    
    free(concatenated);
    return 0;
}
